<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:layout_weight="2"
            android:background="#2F4F4F"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Chế Độ In Phiếu Yêu Cầu(Order)"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/rdg_inphieuDM"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/rdb_layngayDM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gộp Vào Phiếu Lấy Ngay"
                    android:textSize="20dp" 
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rdb_laysauDM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Gộp Vào Phiếu Lấy Sau"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rdb_layriengDM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Tách Thành Phiếu Riêng"
                    android:textSize="20dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="#2F4F4F"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Ghi Chú"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edt_ghichuDM"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:background="#FFFFFF" 
                android:gravity="top"/>
        </LinearLayout>
    </LinearLayout>

    

</LinearLayout>