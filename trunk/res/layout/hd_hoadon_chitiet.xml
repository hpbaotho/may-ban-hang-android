<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:background="#000000"
                    android:orientation="horizontal" >

                    <ScrollView
                        android:id="@+id/ScrollView1"
                        android:layout_width="1630px"
                        android:layout_height="match_parent" >

                        <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:shrinkColumns="*"
                            android:stretchColumns="*" >
                        </TableLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="right"
      		android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_xoaDvHd"
                    android:layout_width="97dp"
                    android:layout_height="match_parent"
                    android:background="#666666"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Xóa"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"                  
                    android:background="#666666"
                    android:paddingBottom="15dp"
                    android:src="@drawable/delete" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_suaDVHd"
                    android:layout_width="97dp"
                    android:layout_height="match_parent"
                    android:background="#666666"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Sửa SL"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                  
                    android:background="#666666"
                    android:paddingBottom="15dp"
                    android:src="@drawable/ic_sua16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="11dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_chuyenDvHd"
                    android:layout_width="97dp"
                    android:layout_height="match_parent"
                    android:background="#666666"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Chuyển"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"                
                    android:background="#666666"
                    android:paddingBottom="15dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_khuyenmaiDvHd"
                    android:layout_width="97dp"
                    android:layout_height="match_parent"
                    android:background="#666666"
                    android:gravity="center"
                    android:text="K.Mại"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"             
                    android:background="#666666"
                    android:paddingBottom="15dp"
                    android:src="@drawable/price_tag" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="2.5"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|right"
            android:text="Mã Giảm Giá"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
          
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint=".........."
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
      
            android:gravity="center_vertical|right"
            android:text="Điều Chỉnh"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp" 
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:background="#FFFFFF" >

                <Spinner
                    android:id="@+id/sp_dieuchinh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
    
            android:gravity="center_vertical|right"
            android:text="Tổng Tiền:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_tongtienHD"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="#FDFD00"
            android:gravity="center"
            android:text="00.00000"
            android:textColor="#000000"
            android:textSize="35dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="2.5"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|left"
             android:layout_marginLeft="10dp" >

            <Button
                android:layout_width="170dp"
                android:layout_height="match_parent"
               
                android:background="#17365D"
                android:gravity="left"
                android:paddingTop="20dp"
                android:text="Tien Thanh Toan"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="#17365D"
                android:paddingBottom="10dp"
                android:paddingRight="3dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right" 
            android:layout_marginRight="10dp">

            <Button
                android:id="@+id/btn_chuyenHD"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="#0066CC"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="Chuyển Đi"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:background="#0066CC"
                android:paddingBottom="10dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/ic_chuyen" 
                android:paddingRight="3dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="#008000"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="P.Kiểm Đồ"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:background="#008000"
                android:paddingBottom="10dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/ic_kiemdo"
                android:paddingRight="3dp" />

            <Button
                android:id="@+id/btn_thanhtoanHd"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="#E36C09"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="Thanh Toán"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#E36C09"
                android:paddingBottom="10dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/print" 
                android:paddingRight="3dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>