<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/tv_DvKhac"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:textColor="#FF0066"
        android:text="Thêm dịch vụ khác vào hóa đơn"
        android:gravity="center"/>
    <LinearLayout 
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:background="#00FF00"></LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Tên dịch vụ"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="10dp"/>
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:id="@+id/edt_tenDvKhacHd"/>
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Số lượng"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="10dp"/>
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="40dp"
             android:layout_weight="1"
            android:gravity="left"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:id="@+id/edt_SoluongDvKhacHd"
            android:inputType="number"/>
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Đơn giá"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="10dp"/>
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="40dp"
             android:layout_weight="1"
            android:gravity="left"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:id="@+id/edt_DongiaDvKhacHd"
            android:inputType="number"/>
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Đơn vị tính"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="10dp"/>
        <Spinner 
            android:layout_width="match_parent"
            android:layout_height="40dp"
             android:layout_weight="1"
            android:gravity="left"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:id="@+id/sp_DonviDvKhacHd"/>
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Khu vực"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="10dp"/>
        <Spinner 
            android:layout_width="match_parent"
            android:layout_height="40dp"
             android:layout_weight="1"
            android:gravity="left"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:id="@+id/sp_KhuvucDvKhacHd"/>
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <Button 
            android:id="@+id/btn_okDvKhacHD"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Đồng ý"
            android:layout_marginRight="20dp"
            android:background="#00FF00"/>
        <Button 
            android:id="@+id/btn_exitDvKhacHD"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Thoát"
            android:background="#FF55FF"/>
    </LinearLayout>

</LinearLayout>
