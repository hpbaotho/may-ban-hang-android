<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_baocao"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:background="#CEA43C"
            android:paddingTop="30dp"
            android:text="Báo Cáo"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:background="#CEA43C"
            android:paddingBottom="20dp"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:src="@drawable/ic_baocao" />

        <Button
            android:id="@+id/btn_dm"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:background="#F5BD83"
            android:paddingTop="30dp"
            android:text="DM Dịch Vụ"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:background="#F5BD83"
            android:paddingBottom="20dp"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:src="@drawable/ic_danhsach" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_qlnv"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:background="#1C9191"
            android:paddingTop="30dp"
            android:text="QL Nhân Viên"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:background="#1C9191"
            android:paddingBottom="20dp"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:src="@drawable/ic_nhanvien_ql" />

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:background="#3695E1"
            android:paddingTop="30dp"
            android:text="Cấu Hình"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:background="#3695E1"
            android:paddingBottom="20dp"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:src="@drawable/ic_caidat" />
    </LinearLayout>

</LinearLayout>