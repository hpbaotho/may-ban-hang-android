<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_qlnv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="QUẢN LÝ NHÂN VIÊN"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingRight="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_tmnv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#EDB366"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:text="Thêm"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:paddingRight="3dp"
                android:background="#EDB366"
                android:paddingBottom="15dp"
                android:src="@drawable/plus_32" />

            <Button
                android:id="@+id/btn_suanv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#1CA9F9"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:text="Sửa"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:paddingRight="3dp"
                android:background="#1CA9F9"
                android:paddingBottom="15dp"
                android:src="@drawable/edit" />

            <Button
                android:id="@+id/btn_xoanv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#A10808"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:text="Xóa"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:paddingRight="3dp"
                android:background="#A10808"
                android:paddingBottom="15dp"
                android:src="@drawable/delete" />

            <Button
                android:id="@+id/btn_exitnvmain"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#B35986"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:text="Thoát"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="20dp"
                android:paddingRight="3dp"
                android:layout_height="match_parent"
                android:background="#B35986"
                android:paddingBottom="15dp"
                android:src="@drawable/home" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="3350px"
                android:layout_height="match_parent"
                android:background="#000000"
                android:orientation="horizontal" >

                <ScrollView
                    android:id="@+id/ScrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="500dp" >

                    <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" >
                    </TableLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>