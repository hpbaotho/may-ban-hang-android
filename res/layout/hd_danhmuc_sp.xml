<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_fav1"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:background="#AAFFAA"
                android:text="1. "/>

            <Button
                android:id="@+id/btn_fav2"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:background="#AAFFAA"
                android:text="2. "/>

            <Button
                android:id="@+id/btn_fav3"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="#AAFFAA"
                android:text="3. "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="27dp"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_fav4"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:background="#AAFFAA"
                android:text="4. "/>

            <Button
                android:id="@+id/btn_fav5"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:background="#AAFFAA"
                android:text="5. "/>

            <Button
                android:id="@+id/btn_fav6"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="#AAFFAA"
                android:text="6. "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="27dp"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_fav7"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:background="#AAFFAA" 
                android:text="7. "/>

            <Button
                android:id="@+id/btn_fav8"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:background="#AAFFAA"
                android:text="8. "/>

            <Button
                android:id="@+id/btn_fav9"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="#AAFFAA"
                android:text="9. "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="27dp"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_fav10"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:background="#AAFFAA"
                android:text="A. "/>

            <Button
                android:id="@+id/btn_fav11"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:background="#AAFFAA"
                android:text="B. "/>

            <Button
                android:id="@+id/btn_fav12"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="#AAFFAA"
                android:text="C. "/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#FFFFFF" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:text="Mã HĐ"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Tên DV"
                android:textSize="20dp" 
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:text="Đơn Giá"
                android:textSize="20dp"
                android:textStyle="bold" 
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF2A2A"></LinearLayout>

        <ListView
            android:id="@+id/lv_danhmucsp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#FFFFFF" >
        </ListView>

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint="search"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="27dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_addFAV"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#953734"
                android:paddingTop="20dp"
                android:text="Thêm FAV"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#953734"
                android:paddingBottom="25dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/ic_fav" />

            <Button
                android:id="@+id/btn_DVkhac"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="36dp"
                android:background="#366092"
                android:paddingTop="20dp"
                android:text="Dịch vụ khác"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#366092"
                android:paddingBottom="25dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/ic_dvkhac" />

            <Button
                android:id="@+id/btn_addHD"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="#008000"
                android:paddingTop="20dp"
                android:text="Thêm vào HĐ"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#008000"
                android:paddingBottom="25dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/ic_cong" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>